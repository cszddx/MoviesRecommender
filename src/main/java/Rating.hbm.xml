<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.analysis.movie.entity.Rating" table="RATING" schema="MOVIES">
        <id name="ratingid" type="long">
            <column name="RATINGID" />
            <generator class="assigned" />
        </id>
        <many-to-one name="movie" class="com.analysis.movie.entity.Movie" fetch="select">
            <column name="MOVIEID" />
        </many-to-one>
        <many-to-one name="users" class="com.analysis.movie.entity.Users" fetch="select">
            <column name="USERID" />
        </many-to-one>
        <property name="rating" type="double">
            <column name="RATING" precision="2" scale="1" />
        </property>
        <property name="createdate" type="timestamp">
            <column name="CREATEDATE" length="29" />
        </property>
    </class>
</hibernate-mapping>
