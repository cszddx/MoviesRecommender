<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.analysis.movie.entity.Users" table="USERS" schema="MOVIES">
        <id name="userid" type="long">
            <column name="USERID" />
            <generator class="assigned" />
        </id>
        <property name="email" type="string">
            <column name="EMAIL" length="50" />
        </property>
        <property name="username" type="string">
            <column name="USERNAME" length="50" />
        </property>
        <set name="tags" inverse="true">
            <key>
                <column name="USERID" />
            </key>
            <one-to-many class="com.analysis.movie.entity.Tag" />
        </set>
        <set name="ratings" inverse="true">
            <key>
                <column name="USERID" />
            </key>
            <one-to-many class="com.analysis.movie.entity.Rating" />
        </set>
        <set name="similarUsers" inverse="true">
            <key>
                <column name="USERID" />
            </key>
            <one-to-many class="com.analysis.movie.entity.Users" />
        </set>
    </class>
</hibernate-mapping>
